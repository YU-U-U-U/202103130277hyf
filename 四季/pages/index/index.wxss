
/* 头部-已自定义组件 */

/* 轮播图 */
.banner{width: 100%;height: 295rpx;}
.banner swiper{width: 100%;height: 100%;}
.banner image{width: 100%;height: 295rpx;}
/* 导航 */
.major{white-space: nowrap;padding: 30rpx 0;}
.major .box{text-align: center;width: 165rpx;display: inline-block;}
.major .pic{width:100rpx ;height: 100rpx;}
.major .txt{font-size: 26rpx;margin-top: 8rpx;}
/* 二十四节气 */
.solarTerms{background:#f0f3f8;padding: 90rpx 0 70rpx;}
.stMain{display: flex;flex-wrap: wrap;justify-content: space-between;} 
.stMain .box{width: 344rpx;height: 214rpx; margin-bottom:10rpx;position: relative;}
.stMain .pic{width: 100%;height: 100%;}
.stMain .ceng{width: 100%;height: 100%; background:rgba(0, 0, 0, 0.5);position: absolute;top: 0;left: 0; color: white;display: flex;flex-direction: column; justify-content: center; align-items: center;padding: 0 20rpx; box-sizing: border-box;text-align: center;}
.stMain .ceng .tit{font-size: 34rpx;}
.stMain .ceng .line{width: 50rpx;height: 2rpx; background:white;margin: 10rpx 0 20rpx 0;}
.stMain .ceng .des{opacity: 0.6; text-transform: uppercase;font-size: 24rpx; letter-spacing: 5rpx;}
/* 四季的色彩 */
.seasonColor{padding: 90rpx 0 70rpx;}
.scItem{display: flex;padding: 15rpx 0;border-bottom: 1rpx dashed #f4f4f4; justify-content: space-between;}
.scItem .pic{width: 230rpx;height: 150rpx;}
.scItem .pic image{width: 100%;height: 100%;}
.scItem .txt{width: 440rpx;display: flex;flex-direction: column;justify-content: space-between;}
.scItem .title{font-size: 34rpx;}
.scItem .info{font-size: 26rpx;color: #888;display: flex;justify-content:space-between}
.scItem .info text{font-size: 22rpx;}
/* 页脚-已自定义组件 */





















